{% extends "layouts/app.twig" %}

{% block content %}
<div class="max-w-4xl mx-auto">
    <div class="bg-gray-800 border border-gray-700 rounded-lg shadow">
        <!-- Header -->
        <div class="px-6 py-4 border-b border-gray-700">
            <h1 class="text-2xl font-bold text-orange-500">
                {{ item is defined ? 'Modifier' : 'Créer' }} {{ config.displayName }}
            </h1>
        </div>

        <!-- Form -->
        <form action="{{ item is defined ? route('craftpanel.update', {model: model_name, id: item.id}) : route('craftpanel.store', {model: model_name}) }}"
              method="POST" enctype="multipart/form-data" class="p-6 space-y-6">
            {% if item is defined %}
                <input type="hidden" name="_method" value="PUT">
            {% endif %}

            {% for field_name, field in fields %}
                <div class="space-y-2">
                    <label for="{{ field_name }}" class="block text-sm font-medium text-gray-300">
                        {{ field.label }}
                        {% if field.required %}
                            <span class="text-red-500">*</span>
                        {% endif %}
                    </label>

                    {% if field.type == 'textarea' %}
                        <textarea name="{{ field_name }}" id="{{ field_name }}" rows="{{ field.rows|default(3) }}"
                                  class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-gray-300 placeholder-gray-400 focus:border-orange-500 focus:ring focus:ring-orange-500 focus:ring-opacity-50"
                                  {{ field.required ? 'required' : '' }}>{{ item is defined ? item[field_name] : '' }}</textarea>

                    {% elseif field.type == 'select' %}
                        <select name="{{ field_name }}" id="{{ field_name }}"
                                class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-gray-300 focus:border-orange-500 focus:ring focus:ring-orange-500 focus:ring-opacity-50"
                                {{ field.required ? 'required' : '' }}>
                            <option value="">Sélectionner...</option>
                            {% for option in field.options %}
                                <option value="{{ option.value }}" 
                                        {{ item is defined and item[field_name] == option.value ? 'selected' : '' }}>
                                    {{ option.label }}
                                </option>
                            {% endfor %}
                        </select>

                    {% elseif field.type == 'checkbox' %}
                        <div class="flex items-center">
                            <input type="checkbox" name="{{ field_name }}" id="{{ field_name }}"
                                   class="w-4 h-4 bg-gray-700 border-gray-600 rounded text-orange-500 focus:ring-orange-500"
                                   {{ item is defined and item[field_name] ? 'checked' : '' }}>
                            <span class="ml-2 text-sm text-gray-300">{{ field.description|default('') }}</span>
                        </div>

                    {% elseif field.type == 'file' %}
                        <div class="flex items-center space-x-4">
                            <input type="file" name="{{ field_name }}" id="{{ field_name }}"
                                   class="block w-full text-sm text-gray-300 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-orange-600 file:text-white hover:file:bg-orange-700"
                                   {{ field.required ? 'required' : '' }}
                                   accept="{{ field.accept|default('') }}">
                            
                            {% if item is defined and item[field_name] %}
                                <div class="flex items-center text-sm text-gray-400">
                                    <span>Fichier actuel :</span>
                                    <a href="{{ asset(item[field_name]) }}" target="_blank" 
                                       class="ml-2 text-orange-500 hover:text-orange-400">
                                        {{ item[field_name]|split('/')|last }}
                                    </a>
                                </div>
                            {% endif %}
                        </div>

                    {% elseif field.type == 'datetime' %}
                        <input type="datetime-local" name="{{ field_name }}" id="{{ field_name }}"
                               class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-gray-300 focus:border-orange-500 focus:ring focus:ring-orange-500 focus:ring-opacity-50"
                               value="{{ item is defined ? item[field_name]|date('Y-m-d\\TH:i') : '' }}"
                               {{ field.required ? 'required' : '' }}>

                    {% else %}
                        <input type="{{ field.type }}" name="{{ field_name }}" id="{{ field_name }}"
                               class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-gray-300 placeholder-gray-400 focus:border-orange-500 focus:ring focus:ring-orange-500 focus:ring-opacity-50"
                               value="{{ item is defined ? item[field_name] : '' }}"
                               placeholder="{{ field.placeholder|default('') }}"
                               {{ field.required ? 'required' : '' }}>
                    {% endif %}

                    {% if field.help %}
                        <p class="mt-1 text-sm text-gray-400">{{ field.help }}</p>
                    {% endif %}

                    {% if errors[field_name] is defined %}
                        <p class="mt-1 text-sm text-red-500">{{ errors[field_name] }}</p>
                    {% endif %}
                </div>
            {% endfor %}

            <!-- Relations -->
            {% if relations is defined and relations|length > 0 %}
                <div class="border-t border-gray-700 pt-6">
                    <h2 class="text-lg font-medium text-orange-500 mb-4">Relations</h2>
                    
                    {% for relation_name, relation in relations %}
                        <div class="space-y-2">
                            <label class="block text-sm font-medium text-gray-300">
                                {{ relation.label|default(relation_name|title) }}
                            </label>

                            {% if relation.type == 'hasMany' %}
                                <div class="space-y-2">
                                    {% for related_item in item[relation_name] %}
                                        <div class="flex items-center justify-between p-3 bg-gray-700 rounded-md">
                                            <span>{{ related_item[relation.display] }}</span>
                                            <a href="{{ route(relation.edit_route, {id: related_item.id}) }}"
                                               class="text-orange-500 hover:text-orange-400">
                                                Modifier
                                            </a>
                                        </div>
                                    {% endfor %}

                                    <a href="{{ route(relation.create_route, {parent_id: item.id}) }}"
                                       class="inline-flex items-center px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-gray-300 hover:bg-gray-600 transition-colors">
                                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                                        </svg>
                                        Ajouter
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            <!-- Actions -->
            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-700">
                <a href="{{ route('craftpanel.index', {model: model_name}) }}"
                   class="px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-gray-300 hover:bg-gray-600 transition-colors">
                    Annuler
                </a>
                <button type="submit"
                        class="px-4 py-2 bg-orange-600 border border-orange-700 rounded-md text-white hover:bg-orange-700 transition-colors">
                    {{ item is defined ? 'Mettre à jour' : 'Créer' }}
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
