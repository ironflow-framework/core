<header class="bg-base-200 border-b border-base-300">
    <div class="flex items-center justify-between p-4">
        <!-- Mobile Menu Toggle -->
        <button class="md:hidden focus:outline-none" id="sidebar-toggle">
            <i class="ti ti-menu-2"></i>
        </button>

        <!-- Page Title -->
        <h1 class="text-xl font-bold hidden md:block">{{ title|default('Dashboard') }}</h1>

        <!-- User Menu -->
        <div class="flex items-center space-x-4">
            <!-- Theme Switcher -->
            <button id="theme-toggle" class="p-2 rounded-full hover:bg-base-300">
                <i class="ti ti-sun theme-light-icon"></i>
                <i class="ti ti-moon theme-dark-icon"></i>
            </button>

            <!-- User Dropdown -->
            <div class="relative" x-data="{ open: false }">
                <button @click="open = !open" class="flex items-center space-x-2 focus:outline-none">
                    <div class="w-8 h-8 rounded-full bg-primary flex items-center justify-center text-primary-content">
                        <span>{{ auth().user.name|slice(0, 1)|upper }}</span>
                    </div>
                    <span class="hidden md:inline-block">{{ auth().user.name }}</span>
                    <i class="ti ti-chevron-down"></i>
                </button>

                <!-- Dropdown Menu -->
                <div x-show="open" @click.away="open = false" class="absolute right-0 mt-2 w-48 bg-base-200 rounded-lg shadow-lg border border-base-300 z-10">
                    <div class="p-2">
                        <a href="{{ route('craftpanel.profile') }}" class="block px-4 py-2 rounded-lg hover:bg-base-300">
                            <i class="ti ti-user mr-2"></i>
                            {{ __('Profile') }}
                        </a>
                        <a href="{{ route('craftpanel.logout') }}" class="block px-4 py-2 rounded-lg hover:bg-base-300">
                            <i class="ti ti-logout mr-2"></i>
                            {{ __('Logout') }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
