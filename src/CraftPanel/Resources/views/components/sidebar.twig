<aside class="w-64 bg-base-200 border-r border-base-300 hidden md:block">
    <div class="p-4 border-b border-base-300">
        <div class="flex items-center justify-between">
            <a href="{{ route('craftpanel.dashboard') }}" class="flex items-center">
                <img src="{{ asset('craftpanel/img/logo.svg') }}" alt="Logo" class="h-8 w-8 mr-2">
                <span class="text-xl font-bold">{{ config('craftpanel.title', 'CraftPanel') }}</span>
            </a>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="mt-4 px-2">
        <ul>
            <li class="mb-1">
                <a href="{{ route('craftpanel.dashboard') }}" class="flex items-center px-4 py-2 rounded-lg {{ is_active('craftpanel.dashboard') ? 'bg-primary text-primary-content' : 'hover:bg-base-300' }}">
                    <i class="ti ti-dashboard mr-3"></i>
                    <span>{{ __('Dashboard') }}</span>
                </a>
            </li>

            <!-- Models Navigation -->
            {% for model, config in craft_models() %}
            <li class="mb-1">
                <a href="{{ route('craftpanel.index', {model: model}) }}" class="flex items-center px-4 py-2 rounded-lg {{ is_active('craftpanel.index', {model: model}) ? 'bg-primary text-primary-content' : 'hover:bg-base-300' }}">
                    <i class="ti ti-{{ config.icon|default('database') }} mr-3"></i>
                    <span>{{ config.displayName }}</span>
                </a>
            </li>
            {% endfor %}

            <!-- Settings -->
            <li class="mb-1">
                <a href="{{ route('craftpanel.settings') }}" class="flex items-center px-4 py-2 rounded-lg {{ is_active('craftpanel.settings') ? 'bg-primary text-primary-content' : 'hover:bg-base-300' }}">
                    <i class="ti ti-settings mr-3"></i>
                    <span>{{ __('Settings') }}</span>
                </a>
            </li>
        </ul>
    </nav>
</aside>
