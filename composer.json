{
    "name": "ironflow/core",
    "description": "IronFlow Framework Core - A modern, modular PHP framework for API-first applications",
    "type": "library",
    "version": "1.0.0",
    "keywords": [
        "framework",
        "php",
        "api",
        "modular",
        "microservices"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "IronFlow Team",
            "email": "ironflow-framework@gmail.com"
        },
        {
            "name": "Aure Dulvresse",
            "email": "adentrepreneur02@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "monolog/monolog": "^3.9",
        "nesbot/carbon": "^3.10",
        "nikic/fast-route": "^1.3",
        "psr/container": "^2.0",
        "psr/http-message": "^1.0",
        "respect/validation": "^2.4",
        "symfony/console": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/http-foundation": "^6.0",
        "symfony/password-hasher": "^7.3",
        "symfony/process": "^6.0",
        "symfony/security-core": "^7.3",
        "symfony/translation": "^7.3",
        "symfony/var-dumper": "^6.0",
        "symfony/yaml": "^7.3",
        "twig/twig": "^3.21",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "IronFlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IronFlow\\Core\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
