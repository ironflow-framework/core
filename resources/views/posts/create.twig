{% extends "layouts/app.twig" %}

{% block title %}Nouvel article{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold mb-8">Nouvel article</h1>

        <form action="{{ url('/posts') }}" method="POST" enctype="multipart/form-data" class="bg-white rounded-lg shadow-md p-8">
            {{ csrf_field() }}

            {{ form.render() }}

            <div class="mt-8">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg">
                    Cr√©er l'article
                </button>
                <a href="{{ url('/posts') }}" class="ml-4 text-gray-500 hover:text-gray-700">
                    Annuler
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
