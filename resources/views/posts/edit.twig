{% extends "layouts/app.twig" %}

{% block title %}Modifier {{ post.title }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold mb-8">Modifier l'article</h1>

        <form action="{{ url('/posts/' ~ post.id) }}" method="POST" enctype="multipart/form-data" class="bg-white rounded-lg shadow-md p-8">
            {{ csrf_field() }}
            {{ method_field('PUT') }}

            {{ form.render() }}

            {% if post.image %}
                <div class="mt-4">
                    <p class="text-sm text-gray-500 mb-2">Image actuelle :</p>
                    <img src="{{ asset(post.image) }}" alt="{{ post.title }}" class="w-32 h-32 object-cover rounded">
                </div>
            {% endif %}

            <div class="mt-8">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg">
                    Mettre Ã  jour
                </button>
                <a href="{{ url('/posts/' ~ post.id) }}" class="ml-4 text-gray-500 hover:text-gray-700">
                    Annuler
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
