{% macro render(text, type = 'primary', href = null, attributes = {}) %}
    {% set classes = {
        'primary': 'bg-blue-600 hover:bg-blue-700 text-white',
        'secondary': 'bg-gray-600 hover:bg-gray-700 text-white',
        'danger': 'bg-red-600 hover:bg-red-700 text-white'
    } %}
    
    {% if href %}
        <a href="{{ href }}" 
           class="px-4 py-2 rounded-md transition-colors duration-200 {{ classes[type] }}"
           {% for key, value in attributes %}
               {{ key }}="{{ value }}"
           {% endfor %}
        >
            {{ text }}
        </a>
    {% else %}
        <button 
            class="px-4 py-2 rounded-md transition-colors duration-200 {{ classes[type] }}"
            {% for key, value in attributes %}
                {{ key }}="{{ value }}"
            {% endfor %}
        >
            {{ text }}
        </button>
    {% endif %}
{% endmacro %} 